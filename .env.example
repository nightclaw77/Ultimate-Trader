# ============================================================
# Ultimate-Trader Configuration Template
# Copy this file to .env and fill in your values
# ============================================================

# ---- Polymarket API ----
# Get from: https://polymarket.com -> Settings -> API
POLYMARKET_PRIVATE_KEY=0x...your_polygon_wallet_private_key
POLYMARKET_FUNDER_ADDRESS=0x...your_proxy_wallet_address
POLYMARKET_API_KEY=your_api_key
POLYMARKET_SECRET=your_api_secret
POLYMARKET_PASSPHRASE=your_passphrase

# ---- AI Analysis (optional) ----
# Get from: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-...

# ---- Telegram Notifications (optional) ----
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ---- Safety Settings ----
DRY_RUN=true                    # true = simulate only, false = real trading
MAX_POSITION_USDC=50            # Max USDC per position
DAILY_LOSS_LIMIT=20             # Stop trading if daily loss exceeds this
MAX_OPEN_POSITIONS=5            # Max concurrent positions

# ---- Copy Trader Settings ----
COPY_TRADER_ADDRESS=            # Wallet address to copy (find top traders on leaderboard)
COPY_SIZE_PERCENT=10            # Copy 10% of their position size
COPY_AUTO_SELL_PROFIT=20        # Auto-sell at 20% profit

# ---- Market Maker Settings ----
MM_ASSETS=BTC,ETH               # Assets to market-make on
MM_TRADE_SIZE=10                # USDC per market
MM_SELL_PRICE=0.60              # Target sell price (entry at 0.50, sell at 0.60 = 20% gain)
MM_CUT_LOSS_TIME=120            # Seconds before close to cut loss
MM_RECOVERY_BUY=false          # Optional recovery buy after cut-loss

# ---- Orderbook Sniper Settings ----
SNIPER_ASSETS=BTC,ETH,SOL      # Assets to snipe
SNIPER_PRICE=0.02               # Price to buy at (very low - waiting for panic sellers)
SNIPER_SHARES=50                # Shares per order per side
SNIPER_SELL_TARGET=0.15         # Auto-sell target (0.02 -> 0.15 = 7.5x return)
